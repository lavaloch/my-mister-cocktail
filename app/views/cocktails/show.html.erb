<h2><%= @cocktail.name %></h2>
<%= link_to "Delete cocktail", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back", cocktails_path %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %></li>
    <p><%= link_to "Delete dose", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.submit "Add dose", class: "btn btn-primary" %>
<% end %>

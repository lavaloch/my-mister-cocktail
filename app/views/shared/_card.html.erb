<% if cocktail.photo %>
  <% url = cl_image_path cocktail.photo.path %>
<% else %>
  <% url = "nopicture.png" %>
<% end %>

<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= url %>')">
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
  </div>
  <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>
